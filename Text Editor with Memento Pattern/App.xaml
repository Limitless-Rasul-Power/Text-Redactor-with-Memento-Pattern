<Application x:Class="Text_Editor_with_Memento_Pattern.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Text_Editor_with_Memento_Pattern"
             StartupUri="Views/StartView.xaml">
    <Application.Resources>

        <LinearGradientBrush x:Key="BackgroundColor">
            <LinearGradientBrush.GradientStops>
                <GradientStop Color="#EB5757" Offset="0.4"/>
                <GradientStop Color="#000000" Offset="0.6"/>
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>

    </Application.Resources>
</Application>
